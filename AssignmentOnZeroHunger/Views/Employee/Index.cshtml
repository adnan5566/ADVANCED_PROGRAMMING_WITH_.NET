@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h2>Employees Details</h2>
<br />
<a href="/Employee/Add/"><btn class="btn btn-primary" type="submit">Add Employee</btn></a>
<a href="/Employee/Assign"><btn class="btn btn-primary" type="submit">Assign Employee For Food Collection</btn></a>
<br />
<br />
@if (Model != null)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Contact Info</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Name</td>
                    <td>@emp.ContactInfo</td>
                    <td>
                        <a href="/Employee/Edit/@emp.ID">Edit</a> |
                        <a href="/Employee/Delete/@emp.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nofound</p>
}